<div class="container justify-content-center">
  <div class="text-center">
    <h2>LA LISTE DE COURSES</h2>
  </div>
  <div class="card-list">
    <%= form_with(model: @event, local: true, html: { multipart: true }) do |form| %>
      <div class="form-group mb-4">
        <%= form.label :name, "À grignoter" %>
      </div>
    <% end %>

    <% @recipes.each do |recipe| %>
      <section class="card-ingredients">
        <h5>À grignoter</h5>
        <div class="cards-info form-group mb-6">
          <h5><%= recipe.name %></h5>
          <h5><%= recipe.user_id %></h5>
        </div>
      </section>
    <% end %>

    <button class="right-circle-btn mt-4">+</button>

    <% @recipes.each do |recipe| %>
      <section class="card-ingredients">
        <h5>À siroter</h5>
        <div class="cards-info form-group mb-6">
          <h5><%= recipe.name %></h5>
          <h5><%= recipe.user_id %></h5>
        </div>
      </section>
    <% end %>

    <button class="right-circle-btn mt-4">+</button>
  </div>
</div>
