
    <div class="container mt-1">
      <h2>Récapitulatif</h2>
        <div class="row" style="background-color: #F5F5F5; border-radius: 28px; margin: 0 10px; padding: 15px 15px ">

          <div class="col p-1">

            <div class="recap-infos recap-bubble">
              <p>Date & Heure</></p>
              <%= @event.date %>
              <%= @event.time %>
            </div>
            <div class="recap-map recap-bubble">
              <%= image_tag("map.png") %>
            </div>
          </div>


          <div class="col p-1">
            <div class="recap-participants recap-bubble">
              <p>Les participants</p>
              <% @participants.each do |participant|%>
                <%= participant.first_name %>
              <% end %>
            </div>

            <div class="recap-theme recap-bubble">
              <p>Thème</p>
              <%= @theme %>
            </div>
          </div>



          <div class="recap-banner recap-bubble"></div>

        </div>
    </div>
