  <%= link_to event_path(@event), class: "back-button" do %>
    <p><i class="fa-solid fa-chevron-left p-3"></i>Dashboard</p>
  <% end %>

<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="text-center mb-4 mt-4">
        <h2>AJOUTER</h2>
      </div>
      <div class="card-ingredients mb-4 cards">
        <div class="list py-3">
          <div class="sous-titre">NOUVEAU</div>
         <div class="sous-titre">NOUVEL INGRÉDIENT</div>
          <%= form_with model: [@event, @ingredient], local: true do |form| %>
            <div class="form-group">
              <%= form.label :name, 'Nom' %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
              <%= form.label :category, 'Catégorie' %>
              <%= form.select :category, options_for_select(['nourriture', 'boisson'], params[:category] || @ingredient.category), {}, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= form.label :managed, 'Gestionnaire' %>
              <%= form.check_box :managed, {class: 'custom-checkbox checkbox-admin'}, 'true', 'false' %>
            </div>
            <%= form.submit 'Ajouter', class: 'square-btn text-center' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
