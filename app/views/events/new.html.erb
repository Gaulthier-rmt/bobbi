<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card mb-4 cards">
        <div class="text-center mb-2 mt-4">
          <h3>JE CRÉE MON ÉVÈNEMENT !</h3>
        </div>

        <div class="card-body">
          <%= form_with(model: @event, local: true, html: { multipart: true }) do |form| %>
            <div class="form-group mb-4">
              <%= form.label :name, "Nom de ton évènement" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Ex: Soirée Barbecue à la maison" %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :description, "Description" %>
              <%= form.text_field :description, class: "form-control", placeholder: "Ex: Tous en blanc !" %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :date, "Date de la soirée" %>
              <%= form.date_field :date, class: "form-control", placeholder: "24/06/2025"%>
            </div>

            <div class="form-group mb-4">
              <%= form.label :time, "Heure" %>
              <%= form.time_field :time, class: "form-control", placeholder: "Ex: 20h" %>
            </div>

             <div class="form-group mb-4">
              <%= form.label :address, "Adresse" %>
              <%= form.text_field :theme, class: "form-control", placeholder: "Ex: 21 rue Haxo, 13001 Marseille" %>
            </div>

             <%# <div class="form-group mb-4">
              <label>Sélectionner des rôles pour les invités</label>
              <% @categories.each do |category| %>
                <%# <div class="form-check">
                  <%= check_box_tag 'event[category_ids][]', category.id, @event.category_ids.include?(category.id), class: 'form-check-input' %>
                  <%# <%= label_tag "event_category_ids_#{category.id}", category.name, class: 'form-check-label' %>
                <%# </div>
              <% end %>
            <%# </div> %>

            <div class="form-group mb-4">
              <%= form.label :theme, "Thème (opt.)" %>
              <%= form.text_field :theme, class: "form-control", placeholder: "Ex: Soirée Blanche" %>
            </div>

            <div class="form-group mb-4">
              <%= form.label :photo, "Photo (opt.)" %>
              <%= form.file_field :photo, class: "form-control", placeholder: "Choisissez une photo pour votre évènement" %>
            </div>

            <div class="form-actions text-center">
              <%= form.submit "Créer", class: "square-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
